{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolvePackageJsonExports": false,
    "outDir": "./dist/cjs",
    "declaration": false,
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.cjs.tsbuildinfo"
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
